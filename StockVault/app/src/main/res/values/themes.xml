<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.StockVault" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#8cdf62</item>
        <item name="colorPrimaryVariant">#8cdf62</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- theme -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="Theme.StockVault" parent="Base.Theme.StockVault" />

    <!-- animation for bar  -->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="Theme.StockVault.Fullscreen" parent="Theme.StockVault">
        <item name="android:actionBarStyle">@style/Widget.Theme.StockVault.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.StockVault.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>
