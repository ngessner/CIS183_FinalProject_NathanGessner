<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/additems_v_ll_material_container"
        android:layout_width="402dp"
        android:layout_height="633dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#FEFEFE"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:translationZ="200dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43">

        <TextView
            android:id="@+id/additems_v_tv_material_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins"
            android:text="View Material"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dash_v_tv_mat_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Material Name:"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dash_v_tv_mat_desc"
            android:layout_width="351dp"
            android:layout_height="163dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Description:"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dash_v_tv_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Unit:"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dash_v_tv_mat_stockamt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Quantity:"
            android:textColor="#121212"
            android:textSize="20sp" />

        <Button
            android:id="@+id/additems_v_btn_mat_exit"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:backgroundTint="#52B137"
            android:fontFamily="@font/poppins"
            android:text="EXIT"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addItems_v_ll_container"
        android:layout_width="409dp"
        android:layout_height="632dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#FEFEFE"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:translationZ="200dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43">

        <TextView
            android:id="@+id/additems_v_tv_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins"
            android:text="View Product"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dash_v_tv_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Product Name:"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dash_v_tv_prod_desc"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Description:"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dash_v_tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Price:"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dash_v_tv_stockAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Amount:"
            android:textColor="#121212"
            android:textSize="20sp" />

        <Button
            android:id="@+id/additems_v_btn_exit"
            android:layout_width="245dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:backgroundTint="#52B137"
            android:fontFamily="@font/poppins"
            android:text="EXIT"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/view_v_bnv_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/rounded_nav_background"
        app:itemIconSize="32dp"
        app:itemIconTint="@color/nav_icon_color"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navbot">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <!-- acting as our drop shadow, i think it just looks nice -->
    <View
        android:id="@+id/shadow_view"
        android:layout_width="382dp"
        android:layout_height="54dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/shadow_gradient"
        app:layout_constraintEnd_toEndOf="@+id/view_v_bnv_bottom_navigation"
        app:layout_constraintStart_toStartOf="@+id/view_v_bnv_bottom_navigation"
        app:layout_constraintTop_toTopOf="@+id/view_v_bnv_bottom_navigation" />

    <!-- tab layout for stocks and materials -->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dashItems_v_tl_tabs"
        android:layout_width="416dp"
        android:layout_height="68dp"
        android:background="#8BDE62"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabIndicatorColor="#4CAF50"
        app:tabIndicatorHeight="4dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#000000"
        app:tabTextAppearance="@style/CustomTabTextStyle"
        app:tabTextColor="#888888">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Products" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_materials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materials" />
    </com.google.android.material.tabs.TabLayout>


    <ListView
        android:id="@+id/dashboard_v_lv_items"
        android:layout_width="407dp"
        android:layout_height="517dp"
        android:layout_marginBottom="8dp"
        android:divider="#00252525"
        android:dividerHeight="20dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/view_v_bnv_bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="129dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:translationZ="90dp"
        app:layout_constraintBottom_toTopOf="@+id/dashboard_v_lv_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.092">

        <TextView
            android:id="@+id/dash_v_tv_subHeader2"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="Products Made"
            android:textColor="#272727"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dash_v_tv_subHeader"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="Materials Made"
            android:textColor="#272727"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="99dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashItems_v_tl_tabs">

        <TextView
            android:id="@+id/dash_v_tv_subHeader4"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="0"
            android:textColor="#191919"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dash_v_tv_subHeader5"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="0"
            android:textColor="#191919"
            android:textSize="48sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
