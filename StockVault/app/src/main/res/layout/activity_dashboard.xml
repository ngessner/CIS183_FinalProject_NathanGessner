<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- nav bar. this uses the menu xml for navigation which is just better than buttons really. -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_v_bnv_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/rounded_nav_background"
        app:itemIconSize="32dp"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@color/nav_icon_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navbot" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <!-- acting as our drop shadow, i think it just looks nice -->
    <View
        android:id="@+id/shadow_view"
        android:layout_width="382dp"
        android:layout_height="54dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/shadow_gradient"
        app:layout_constraintEnd_toEndOf="@+id/home_v_bnv_bottom_navigation"
        app:layout_constraintStart_toStartOf="@+id/home_v_bnv_bottom_navigation"
        app:layout_constraintTop_toTopOf="@+id/home_v_bnv_bottom_navigation" />


</androidx.constraintlayout.widget.ConstraintLayout>
