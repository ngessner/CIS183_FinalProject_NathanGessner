<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/regact_v_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#8cdf62"
    tools:context=".Registration">

    <LinearLayout
        android:id="@+id/regact_v_ll_bottom_container"
        android:layout_width="411dp"
        android:layout_height="218dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regact_v_ll_container"
        app:layout_constraintVertical_bias="0.74">

        <TextView
            android:id="@+id/regact_v_tv_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:text="Have an account?"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/regact_v_tv_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:text="Sign In"
            android:textColor="#50BD31"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/regact_v_ll_container"
        android:layout_width="415dp"
        android:layout_height="563dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/regact_v_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins"
            android:text="Register"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/regact_v_et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:fontFamily="@font/poppins"
            android:hint="Username"
            android:padding="12dp"
            android:textColor="#2E2E2E"
            android:textColorHint="#777777" />

        <EditText
            android:id="@+id/regact_v_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:drawableStart="@android:drawable/ic_menu_send"
            android:fontFamily="@font/poppins"
            android:hint="Email Address"
            android:padding="12dp"
            android:textColor="#2E2E2E"
            android:textColorHint="#777777" />

        <EditText
            android:id="@+id/regact_v_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:fontFamily="@font/poppins"
            android:hint="Password"
            android:padding="12dp"
            android:textColor="#2E2E2E"
            android:textColorHint="#777777" />

        <EditText
            android:id="@+id/regact_v_et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:fontFamily="@font/poppins"
            android:hint="Confirm Password"
            android:padding="12dp"
            android:textColor="#2E2E2E"
            android:textColorHint="#777777" />

        <Button
            android:id="@+id/regact_v_btn_sign_up"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#52B137"
            android:fontFamily="@font/poppins"
            android:text="SIGN UP"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
