<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8cdf62"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/settings_v_ll_container"
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#FEFEFE"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35">

        <!-- Title -->
        <TextView
            android:id="@+id/settings_v_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins"
            android:text="Profile Info"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Editable Fields -->
        <EditText
            android:id="@+id/settings_v_et_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins"
            android:hint="First Name"
            android:padding="12dp" />

        <EditText
            android:id="@+id/settings_v_et_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins"
            android:hint="Last Name"
            android:padding="12dp" />

        <EditText
            android:id="@+id/settings_v_et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins"
            android:hint="Username"
            android:padding="12dp" />

        <EditText
            android:id="@+id/settings_v_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins"
            android:hint="Email"
            android:padding="12dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/settings_v_btn_save"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#52B137"
            android:fontFamily="@font/poppins"
            android:text="BACK"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>